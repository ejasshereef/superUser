	<script>
		
    function validate(){
        let phone=document.getElementById('otpPhone')
       

        const regexPhone = /[0-9]{10}/gm;
        
        if((phone.value !=''&& regexPhone.test(phone.value))){
            return true
        }else{
            alert("enter a valid Phone Number")
            return false

        }

   }

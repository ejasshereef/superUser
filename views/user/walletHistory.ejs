<%- include('_userheader') %>

<body>
	

	<%- include('_headerNavBar') %>
	

	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Wallet History</h1>
					<nav class="d-flex align-items-center">
						<a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
						<a href="/user-profile">User Profile</a>
                        <a href="#"><span class="lnr lnr-arrow-right"></span></a>
						<a href="/wallet-history">Wallet History</a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Login Box Area =================-->
	
	<div class="col-sm-12 col-xl-12">
		<div class="bg-light rounded h-100 p-4">
			<h6 class="mb-4">Order Details</h6>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">No</th>
						
						<th scope="col">ID</th>
						
						<th scope="col">Product Name</th>
						<th scope="col">Status</th>
						<th scope="col">amount</th>
                        <th scope="col">Payment Mode</th>

					</tr>
				</thead>
				<tbody>
				  
                    <% if (order) { %>
                     <% order.forEach((element,index) => { %>
                        <tr>
                            <td><%= index+1 %></td>
                            <td><%= element._id.toString().slice(-8) %></td>
                            <td><% (element.products).forEach(element => { %><%= element.name  %> <br><% }) %></td>
                            <td><%= element.status %></td>
                            <td><%= element.subTotal %></td>
                            <td><%= element.secondaryPaymentMode || element.paymentMode %></td>
                        </tr>
                     <% }) %>
                    <% } %>

				</tbody>
			</table>

           <% if (wallet) { %>
            <div class="container">
                <div class="row">
                    <div class="col-md-9"></div>
                    <div class="col-md-2 ">
                        Total Amount=<u><%= wallet.amount %></u></div>
                   
                </div>
               </div> 
           <% } %>
		</div>
	</div>
	<!--================End Login Box Area =================-->

	




<%- include('_userheader') %>

<body>

	<!-- Start Header Area -->
	<%- include('_headerNavBar') %>
	<!-- End Header Area -->

	<!-- Start Banner Area -->
	<section class="banner-area organic-breadcrumb">
		<div class="container">
			<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
				<div class="col-first">
					<h1>Confirmation</h1>
					<nav class="d-flex align-items-center">
						<a href="/">Home<span class="lnr lnr-arrow-right"></span></a>
						<a href="/order-page">Confirmation</a>
					</nav>
				</div>
			</div>
		</div>
	</section>
	<!-- End Banner Area -->

	<!--================Order Details Area =================-->
	<section class="order_details section_gap">
		<div class="container">
			<h3 class="title_confirmation">Thank you. Your order has been received.</h3>
			<div class="row order_d_inner">
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Order Info</h4>
						<ul class="list">
							
							<% if (order) { %>
								
			
									<li><a href="#"><span>Order number</span><%= order._id %></a></li>
									<li><a href="#"><span>Date</span> : <%= order.createdAt.toLocaleDateString() %></a></li>
									<li><a href="#"><span>Total</span> : <%= order.subTotal %> </a></li>
									<li><a href="#"><span>Payment method</span> : <%= order.paymentMode %> </a></li>
									
									
						</ul>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Billing Address</h4>
						<ul class="list">
							<li><a href="#"><span>Street</span> : <%= address.addressLine2 %></a></li>
							<li><a href="#"><span>City</span> : <%= address.city %></a></li>
							<li><a href="#"><span>Country</span> : <%= address.country %></a></li>
							<li><a href="#"><span>Postcode </span> : <%= address.postcode %></a></li>
						</ul>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="details_item">
						<h4>Shipping Address</h4>
						<ul class="list">
							<li><a href="#"><span>Street</span> : <%= address.addressLine2 %></a></li>
							<li><a href="#"><span>City</span> : <%= address.city %></a></li>
							<li><a href="#"><span>Country</span> : <%= address.country %></a></li>
							<li><a href="#"><span>Postcode </span> : <%= address.postcode %></a></li>
						</ul>
					</div>
				</div>
			</div>
			<% } %>
			<div class="order_details_table">
				<h2>Order Details</h2>
				<div class="table-responsive">
					<table class="table">
						<thead>
							<tr>
								<th scope="col">Product</th>
								<th scope="col">Quantity</th>
								<th scope="col">Total</th>
							</tr>
						</thead>
						<tbody>
							<% if (order) { %>
								
								<% (order.products).forEach(element => { %>
									<tr>
										<td>
											<p><%= element.name %></p>
										</td>
										<td>
											<h5><%= element.quantity %></h5>
										</td>
										<td>
											<p><%= element.total %></p>
										</td>
										
									</tr>
								<% }) %>
							 
							
							
							
							<tr>
								<td>
									<h4>Subtotal</h4>
								</td>
								<td>
									<h5></h5>
								</td>
								<td>
									<p><%= order.subTotal %></p>
								</td>
							</tr>
							<tr>
								<td>
									<h4>Shipping</h4>
								</td>
								<td>
									<h5></h5>
								</td>
								<td>
									<p>00.00</p>
								</td>
							</tr>
							<tr>
								<td>
									<h4>Total</h4>
								</td>
								<td>
									<h5></h5>
								</td>
								<td>
									<p><%= order.subTotal %></p>
								</td>
								<% } %>
							</tr>
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</section>
	<!--================End Order Details Area =================-->

	<div class="container text-center" >
		<div class="row" >
			<div class=" button_button col-md-4 ml-5 ">
				
			</div>
			<div class=" button_button col-md-2">
				
			</div>
			<div class="button_button col-md-4 ml-5">
				<a class="primary-btn" href="/">Contunue Shopping</a>
			</div>
		</div>
	</div>

	<!-- start footer Area -->
	<%- include('_footerArea') %>
	<!-- End footer Area -->




	<%- include('_userfooter') %>